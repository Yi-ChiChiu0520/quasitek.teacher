@model Teacher

@{
    ViewData["Title"] = "Add Teacher";
}

<div class="row mb-3 align-items-center">
    <div class="col-md-12 d-flex align-items-center justify-content-start flex-wrap">
        <h2 class="me-3 mb-0" style="color: #1A7A77;">Add Teacher</h2>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <button onclick="window.history.back();" class="btn btn-secondary btn-sm">Back</button>
    </div>
</div>
<form asp-action="SignUpTeacher" asp-controller="Teacher" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Teacher Name<span class="text-danger">*</span></label>
                <input asp-for="TeacherName" type="text" class="form-control" placeholder="Enter Teacher Name" required>  
            </div>

            <div class="form-group">
                <label>Email<span class="text-danger">*</span></label>
                <input asp-for="Email" type="text" class="form-control" placeholder="Enter Email" required>  
            </div>

            <div class="form-group">
                <label>Password<span class="text-danger">*</span></label>
                <input asp-for="Pw" type="text" class="form-control" placeholder="Enter Password" required>  
            </div>

            <div class="form-group">
                <label>Authority Level<span class="text-danger">*</span></label>
                <input asp-for="Authorize" type="text" class="form-control" placeholder="Enter Authority Level" required>  
            </div>

            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary" style="background-color: #1A7A77; border-color: #1A7A77;">Add</button>  
                    <a asp-action="Index" asp-controller="Teacher" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>
