@model Classes

@{
    ViewData["Title"] = "Add New Class";
}
<div class="row mb-3 align-items-center">
    <div class="col-md-8 d-flex align-items-center justify-content-start">
         <h2 class="me-3 mb-0" style="color: #1A7A77;">Add Class</h2>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <button onclick="window.history.back();" class="btn btn-secondary btn-sm">Back</button>
    </div>
</div>
<form asp-action="SignUpClasses" asp-controller="Classes" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="TeacherId" class="control-label">Teacher Name<span class="text-danger">*</span></label>
                <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.Teachers" required>
                    <option value="">Select Teacher</option>
                </select>
                <span asp-validation-for="TeacherId" class="text-danger"></span> 
            </div>
            <div class="form-group">
                <label asp-for="CourseGroupName" class="control-label">Course Subject Name<span class="text-danger">*</span></label>
                <select asp-for="CourseGroupName" class="form-control" asp-items="ViewBag.CourseGroupOptions" required>
                    <option value="">Select Course Subject</option>
                </select>
                <span asp-validation-for="CourseGroupName" class="text-danger"></span>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary" style="background-color: #1A7A77; border-color: #1A7A77;">Add</button>  
                    <a asp-action="Index" asp-controller="Classes" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>
