@model IEnumerable<quasitekWeb.Models.Course>

@{
    ViewBag.Title = "Courses in Class " + ViewBag.Class?.ClassesName;
}

<div class="row mb-3 align-items-center">
    <div class="col-md-8 d-flex align-items-center justify-content-start">
         <h2 class="me-3 mb-0" style="color: #1A7A77;">Courses of Class</h2>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <button onclick="window.history.back();" class="btn btn-secondary btn-sm">Back</button>
    </div>
</div>
<p>Class: @ViewBag.Class?.ClassesName</p>
<p>Course Subject: @ViewBag.Class?.CourseGroupName</p>
<p>Number of Courses: @ViewBag.CourseNumber</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Course Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseName</td>
                <td>@course.CourseIntro</td>
            </tr>
        }
    </tbody>
</table>
