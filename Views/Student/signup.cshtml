@model quasitekWeb.Models.Student

@{
    ViewData["Title"] = "Add New Student";
}

<div class="row mb-3 align-items-center">
    <div class="col-md-8 d-flex align-items-center justify-content-start">
        <h2 class="me-3 mb-0" style="color: #1A7A77;">Add Student</h2>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <button onclick="window.history.back();" class="btn btn-secondary btn-sm">Back</button>
    </div>
</div>

@if (ViewBag.Classes != null && (Model == null || Model.ClassesId == 0))
{
    <form asp-action="SignUp" method="get">
        <div class="form-group">
            <label>Select Class<span class="text-danger">*</span></label>
            <select name="classesId" class="form-control mr-2" onchange="this.form.submit();" style="width: 300px;">
                <option value="">Select Class</option>
                @foreach (var cls in (IEnumerable<SelectListItem>)ViewBag.Classes)
                {
                    <option value="@cls.Value">@cls.Text</option>
                }
            </select>
        </div>
    </form>
}
