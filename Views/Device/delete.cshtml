@model quasitekWeb.Models.Device

@{
    ViewData["Title"] = "Delete Device";
}

<div class="row mb-3 align-items-center">
    <div class="col-md-8 d-flex align-items-center justify-content-start">
         <h2 class="me-3 mb-0" style="color: #1A7A77;">Delete Device</h2>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <button onclick="window.history.back();" class="btn btn-secondary btn-sm">Back</button>
    </div>
</div>
<form asp-action="DeleteDevice" method="post" class="form-inline">
    <div class="col-md-12">
        <label>Delete device<span class="text-danger">*</span></label>
    </div>
    <div class="row mb-3">
        <div class="col-md-12 d-flex align-items-center">
            <input type="text" class="form-control" id="searchTerm" name="searchTerm" placeholder="Enter Device ID or Name " style="width: 300px;" required/>
            <button type="submit" class="btn btn-primary d-inline" style="background-color: #1A7A77; border-color: #1A7A77; margin-left: 10px;" >Delete</button>
        </div>
    </div>
</form>