@model List<quasitekWeb.Models.Device>

@{
    ViewData["Title"]="Devices";
}

<div class="row mb-3 align-items-center">
    <div class="col-md-8 d-flex align-items-center justify-content-start flex-wrap">
        <h2 class="me-3 mb-0" style="color: #1A7A77;">Devices</h2>
        <a asp-action="SignUp" asp-controller="Device" class="btn btn-primary btn-custom" style="margin-left:10px">Add Device</a>
        <a asp-action="Delete" asp-controller="Device" class="btn btn-primary btn-custom" style="margin-left:10px">Delete Device</a>
        <a asp-action="Update" asp-controller="Device" class="btn btn-primary btn-custom" style="margin-left:10px">Update Device</a>
    </div>
</div>

<div class="row mb-3 d-flex align-items-center justify-content-between">
    <!-- Left side: Back button -->
    <div class="col-md-4">
        <button onclick="window.history.back();" class="btn btn-secondary btn-sm">Back</button>
    </div>
    <div class="col-md-8 d-flex justify-content-end">
        <form method="get" action="@Url.Action("Index")" class="d-flex">
            <!-- Input for Student Search -->
            <input type="text" name="searchTerm" class="form-control" placeholder="Search Device..." value="@ViewBag.SearchTerm" style="width: 200px;" />
            <!-- Search Submit Button -->
            <button class="btn btn-outline-secondary ms-2" type="submit" style="width: 80px; white-space: nowrap;">Search</button>
        </form>
    </div>
</div>


@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger mt-2">
        @ViewBag.ErrorMessage
    </div>
}
else{
    <div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Device ID</th>
                    <th>Device Name</th>
                    <th>Device Model</th>
                    <th>Purchase Date</th>
                    <th>Expiration Date</th>
                </tr>
            </thead>    
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.DeviceId</td>
                        <td>@item.DeviceName</td>
                        <td>@item.DeviceModel</td>
                        <td>@item.PurchaseDate</td>
                        <td>@item.ExpireDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
}

